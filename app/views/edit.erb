<h1>EDIT</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <%= @recipe.name %> NAME: <input type="text" name="name"><br>
  <%= @recipe.ingredients %> INGREDIENTS: <input type="text" name="ingredients"><br>
  <%= @recipe.cook_time %> COOK TIME: <input type="text" name="cook_time"><br>
  <input type="submit" value="submit">
</form>
